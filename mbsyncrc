# Automatically create missing mailboxes, both locally and on the server
Create Both
SyncState *

IMAPAccount gmail
# Address to connect to
Host imap.gmail.com
User antoine.damhet@gmail.com
AuthMechs PLAIN
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "pass show mails/gmail"
#
# Use SSL
SSLType IMAPS
# The following line should work. If get certificate errors, uncomment the two following lines and read the "Troubleshooting" section.
#CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore gmail-remote
Account gmail

# Migadu
IMAPAccount xdbob
Host imap.migadu.com
User admin@xdbob.net
AuthMechs PLAIN
PassCmd "pass show services/migadu.com/admin@xdbob.net"
SSLType IMAPS


IMAPStore xdbob-inbox
Account xdbob


IMAPAccount damhet
Host imap.migadu.com
User admin@damhet.fr
AuthMechs PLAIN
PassCmd "pass show services/migadu.com/admin@damhet.fr"
SSLType IMAPS


IMAPStore damhet-inbox
Account damhet

IMAPAccount blade
# Address to connect to
Host imap.gmail.com
User antoine.damhet@shadow.tech
AuthMechs PLAIN
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "pass show mails/blade"
#
# Use SSL
SSLType IMAPS
#CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore blade-remote
Account blade

MaildirStore gmail-local
# The trailing "/" is important
Path ~/.mail/gmail/
Inbox ~/.mail/gmail/inbox
SubFolders Verbatim

MaildirStore damhet-local
# The trailing "/" is important
Path ~/.mail/damhet/
Inbox ~/.mail/damhet/inbox
SubFolders Verbatim

MaildirStore xdbob-local
# The trailing "/" is important
Path ~/.mail/xdbob/
Inbox ~/.mail/xdbob/inbox
SubFolders Verbatim

Channel gmail-inbox
Far :gmail-remote:INBOX
Near :gmail-local:inbox
#Patterns "INBOX"

Channel gmail-archive
Far :gmail-remote:"[Gmail]/Tous les messages"
Near :gmail-local:All

Channel gmail-sent
Far :gmail-remote:"[Gmail]/Sent"
Near :gmail-local:Sent

Channel gmail-junk
Far :gmail-remote:"[Gmail]/Spam"
Near :gmail-local:Junk

# All the rest
Channel gmail-all
Far :gmail-remote:
Near :gmail-local:
Patterns * ![Gmail]* !INBOX !All !Sent !Junk !blade-inbox

Channel blade-inbox
Far :blade-remote:INBOX
Near  :gmail-local:blade-inbox

Channel damhet
Far :damhet-inbox:
Near :damhet-local:

Channel xdbob
Far :xdbob-inbox:
Near :xdbob-local:

Group gmail
Channel gmail-inbox
Channel gmail-sent
Channel gmail-junk

Group pro
Channel blade-inbox
