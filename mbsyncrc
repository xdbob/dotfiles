IMAPAccount gmail
# Address to connect to
Host imap.gmail.com
User antoine.damhet@gmail.com
AuthMechs PLAIN
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "pass show mails/gmail"
#
# Use SSL
SSLType IMAPS
# The following line should work. If get certificate errors, uncomment the two following lines and read the "Troubleshooting" section.
CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore gmail-remote
Account gmail

IMAPAccount blade
# Address to connect to
Host imap.gmail.com
User antoine.damhet@blade-group.com
AuthMechs PLAIN
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "pass show mails/blade"
#
# Use SSL
SSLType IMAPS
CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore blade-remote
Account blade

MaildirStore gmail-local
# The trailing "/" is important
Path ~/.mail/
Inbox ~/.mail/inbox
SubFolders Verbatim

Channel gmail-inbox
Master :gmail-remote:Inbox
Slave :gmail-local:inbox
#Patterns "INBOX"

Channel gmail-archive
Master :gmail-remote:"[Gmail]/Tous les messages"
Slave :gmail-local:All

Channel gmail-sent
Master :gmail-remote:"[Gmail]/Sent"
Slave :gmail-local:Sent

Channel gmail-junk
Master :gmail-remote:"[Gmail]/Spam"
Slave :gmail-local:Junk

# All the rest
Channel gmail-all
Master :gmail-remote:
Slave :gmail-local:
Patterns * ![Gmail]* !Inbox !All !Sent !Junk !blade-inbox

Channel blade-inbox
Master :blade-remote:Inbox
Slave  :gmail-local:blade-inbox

Group gmail
Channel gmail-inbox
Channel gmail-received
Channel gmail-sent
Channel gmail-junk

Group pro
Channel blade-inbox

# Or include everything
#Patterns *
# Automatically create missing mailboxes, both locally and on the server
Create Both
# Save the synchronization state files in the relevant directory
SyncState *
